@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <!-- bs css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <style>
        /* Global Styles */
        :root{
            --jg-theme-core: #9d5734;
            --jg-theme-100: hsl(20, 52%, 91%);
            --jg-theme-150: hsl(20, 6%, 87%);
            --jg-theme-200: hsl(20, 51%, 81%);
            --jg-theme-300: hsl(20, 50%, 71%);
            --jg-theme-400: hsl(20, 50%, 61%);
            --jg-theme-500: hsl(20, 46%, 48%);
            --jg-theme-600: hsl(20, 50%, 41%);
            --jg-theme-700: hsl(20, 50%, 31%);
            --jg-theme-800: hsl(20, 50%, 21%);
            --jg-theme-850: hsl(20, 50%, 16%);
            --jg-theme-900: hsl(20, 50%, 11%);
        }


        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        /* Container for the Content Box */
        .containerLogin {
            display: flex !important;
            justify-content: start !important;
            align-items: center !important;
            height: 100vh !important;
            /*            width: 100vh;*/
        }

        /* Content Box on the Left */
        .content-box {
            padding: 20px;
            background-color: #fff;
            border: 2px solid #333;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-left: 3rem;
        }

        .bg-image {
            background-image: url(/img/landingImage.png) !important;
            background-size: cover !important;
            background-position: center !important;
            background-repeat: no-repeat !important;
            position: relative !important;
        }

        .bg-filter {
            background: linear-gradient( to right, rgba(0,0, 0, 8), rgba(0, 0, 0, 0) ) !important;
            background-size: cover !important;
            background-position: center !important;
            background-repeat: no-repeat !important;
            position: relative !important;
        }

        .transparent-white-background {
            background-color: rgba(255, 255, 255, 0.5); /* 0.7 is the alpha value for 70% opacity */
            border-radius: .5rem;
            border-style: solid;
            border-width: 2px;
            padding-top: 1rem;
            padding-bottom: 2rem;
            position: relative;

        }

        .margin{
            margin-left:3rem;
            margin-top:3rem;
            margin-bottom:3rem;
            
        }
        .padding{
            padding: 1.5rem 3rem 3rem 3rem; 
        }

    </style>
</head>
<body class="bg-image ">
    <div class="row containerLogin bg-filter">
        <div class="col-md-4 ">
            <section>
                <form id="account" method="post" class="transparent-white-background margin padding">
                    <h1>@ViewData["Title"]</h1>
                    <h2>Use a local account to log in.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div class="mt-2">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-4 col-md-offset-2 transparent-white-background text-center">
            <section>
                <h3>Or use one of the Demo Accounts to log in. </h3>
                <hr />

                <div class="mb-1 text-center">
                    <form class="text-center" id="account" method="post">
                        <div class="form-group ">
                            <div class="row ">
                                <div class="col-8 btn-block ">
                                    <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2 " name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                                    <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                                    <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                                    <button type="submit" style="width:inherit;height:min-content" class="btn btn-primary p-10 m-2" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </section>
        </div>
    </div>
</body>

</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
